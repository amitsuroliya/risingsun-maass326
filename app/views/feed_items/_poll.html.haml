- poll ||= feed_item.item
%div[feed_item]
  .comments
    %img{:alt => "User Photo Icon", :src => "/assets/poll_icon.png", :title => "User Photo Icon"}
    %strong
      = link_to h(poll.profile.full_name), poll.profile
      created a poll #{time_ago_in_words poll.created_at} ago
    %br
    = link_to poll.question, profile_poll_path(poll.profile, poll)
  = x_feed_link(feed_item) if me