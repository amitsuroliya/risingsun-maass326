- blog ||= feed_item.item
%div[feed_item]
  .comments
    %img{:alt => "User Photo Icon", :src => "/assets/blog.gif", :title => "User Photo Icon"}
    %strong
      = link_to h(blog.profile.full_name), blog.profile
      blogged #{time_ago_in_words blog.created_at} ago
    %br
    = link_to (blog.title), profile_blog_path(blog.profile, blog)
  = x_feed_link(feed_item) if me