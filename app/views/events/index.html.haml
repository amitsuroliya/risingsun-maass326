.widget_complete
  %span.widget_complete_top 
  %h3.blog_head.event_head_width Birthdays
  - birthdays = Profile.birthdays
  - birthdays.keys.sort.each do |month|
    %i.forum_text= Date::MONTHNAMES[month]
    - birthdays[month].each do |b|
      .forum_text
        = b.date_of_birth.to_formatted_s(:rfc822)
        =": #{b.full_name} (#{b.group})"
  %span.widget_complete_btm

