= form_for(:title, :url => update_title_admin_preferences_path,:html =>{:method => :put}) do |f|
  - @titles.each_with_index do |title, index|
    = f.fields_for "titles[#{index}]", title do |p|
      = hidden_field_tag "title[titles][#{index}][id]", title.id
      .row_complete
        = p.text_field :name, :title => "Title", :class => "text_field"
  %button.buttons{:type => "submit"}
    = image_tag('Update.png')