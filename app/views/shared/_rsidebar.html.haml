= render :partial=>'profiles/featured'
- unless @profile.blank?
  = render :partial=>'shared/search_by_keyword', :profile=>@profile 
  = render :partial => 'profiles/greets'
  = render 'blogs/archives'
  = render 'blogs/tag_clouds'
  - if !@profile.twitter_username.blank? && params[:controller] == "profiles"
    %div{:id=>'twtr-widget', :class =>'twitter_update'}
      = javascript_include_tag 'http://twitter.com/javascripts/widgets/widget.js'
      %script
        twitter_blog('#{@profile.twitter_username}')