= rounded_corner(:title => 'Search', :size => 'small') do
  = form_tag search_profiles_path, :method => :get, :class => "search_form" do
    = select(:search, :key, SEARCH_KEYS.map{ |k| [k.titleize,k]}, {:selected => (params[:search] && params[:search][:key])}, {:class => "search_blog_textbox"})
    - default_search_value = params[:search].try(:[],:q) || "Search"
    = text_field_tag 'search[q]', default_search_value, :id => 'search_all', :class=>"search_blog_textbox"
    %button.search_blog_bt{:type => "submit"}