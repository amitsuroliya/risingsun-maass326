.forum_links
  = link_to "Back to Forums", forums_path
  |
  = link_to "Back to #{@forum.name}", forum_path(@forum)
.widget_complete
  %span.widget_complete_top
  %h3.forum_head
    .froum_page_title= sanitize(@forum_topic.title)
    .forum_links
      - if @is_admin
        = link_to image_tag('edit.png', :title => "Edit Topic"),  edit_forum_forum_topic_path(@forum)
        = link_to image_tag('delete.png', :title => "Delete Topic"), forum_forum_topic_path(@forum), :method => :delete
  = render :partial => 'forum_posts/post', :collection => @forum_topic.posts
  = render :partial => "forum_posts/form"
  .clear_div
  %span.widget_complete_btm
