- feed_items ||= @feed_items
- unless feed_items.empty?
  .widget_large
    %span.widget_lrg_top
    = slide_up_down_header('recent_activities','Recent Activity', 'sliding')
    .slidecontent
      - feed_items.each do |feed_item|
        - next unless feed_item.item
        = render "feed_items/#{feed_item.partial}", :feed_item => feed_item
    %span.widget_lrg_btm