%table.middle_panel_profile 
  = show_field(@profile.group,"Group","group")
  = show_field(@profile.house_name,"House Name","house_name")
  = show_field(@profile.gender,"Gender","gender")
  = show_field(@profile.blood_group,"Blood Group","blood_group")
  = show_field(@profile.date_of_birth,"Date Of Birth","date_of_birth")
  = show_field(@profile.address_line1,"Address","address_line1")
  = show_field(@profile.landline,"Landline", "landline")
  = show_field(@profile.mobile, "Mobile" , "mobile")
  = show_field(@profile.relationship_status, "Relationship Status" , "relationship_status")
  = show_field(@profile.maiden_name, "Maiden Name" , "maiden_last_name")
  = show_field(@profile.spouse_name, "Spouse Name" , "spouse_name")
  = show_field(@profile.anniversary_date, "Anniversary Date" , "anniversary_date")
  = show_field(@profile.professional_qualification, "Professional Qualification" , "professional_qualification")
- if !@profile.about_me.blank? && @profile.can_see_field("about_me", @p)
  %h3 About
  %p= @profile.about_me
- if !@profile.activities.blank? && @profile.can_see_field("activities", @p)
  %h3 Activities
  %p= @profile.activities
