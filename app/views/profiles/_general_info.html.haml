= rounded_med_corner(:id => 'general_info', :title => 'General Info') do
  = f.semantic_fields_for(:user) do |u|
    = u.inputs do
      = u.input :login, formtastic_zebra2(:value => current_user.login)
    = f.inputs do
      = f.input :title, formtastic_zebra2(:as => :select, :collection => TITLE, :include_blank => true)
      = f.input :first_name, formtastic_zebra2
      = f.input :middle_name, formtastic_zebra2
      = f.input :last_name,  formtastic_zebra2
      = f.input :maiden_name, formtastic_zebra2
      = f.input :gender, formtastic_zebra2(:as => :select, :collection => SEX, :include_blank => true)
      = f.input :blood_group, formtastic_zebra2(:as => :select, :collection => BLOOD_GROUP, :include_blank => true)
      = f.input :group,  formtastic_zebra2(:collection => GROUPS.reject{|obj| GROUPS.first==obj}, :include_blank => false)
      = f.input :house_name, formtastic_zebra2(:as => :select, :collection => HOUSE_NAME, :include_blank => true)
      = f.input :date_of_birth, formtastic_zebra2(:as => :string, :input_html => {:class => "datebalks" })
      = f.input :relationship_status, formtastic_zebra2(:as => :select, :collection => RELATIONSHIP_STATUS, :include_blank => true)
      = f.input :anniversary_date, formtastic_zebra2(:as => :string, :input_html => {:class => "datebalks" })
      = f.input :spouse_name, formtastic_zebra2
      = f.input :professional_qualification, formtastic_zebra2
      = f.input :about_me,  :as => :text, :wrapper_html => {:class => "row_dark_large2"}
      = f.input :activities, :as => :text, :wrapper_html => {:class => "row_light_large2"}
